<%=render 'header'%>
 <%if current_user.admin?%>
      <%= render 'searchForm'%>
   <%end%>
 <div class="my-4">
 <div class=" table-responsive bg-white rounded border border-success p-2">

   <table class="table table-striped" >
		<tr>
			<th >First Name</th>
			<th >Last Name</th>
			<th >Email</th>
			<th>Action</th>

		</tr>

		<%@users.each do |user|%>
		<div>
			<tr>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.email %></td>
				
				<td>
					<%if current_user.admin?%>
					<%= link_to 'Show', user_path(user),class:"btn btn-success btn-sm w-25"%>
					<button class="btn btn-danger btn-sm w-25">Reject</button>
					<button class="btn btn-success btn-sm w-25">Approve</button>
					<%else%>
					<%= link_to 'Show', user_path(user),class:"btn btn-success"%>
					<%= link_to 'Continue Application', edit_user_path(user),class:"btn btn-success" %>

					<%end%>	
					</td>
				</tr>
			</div>

			<% end %>
		</table>
		<%= paginate @users %>
	</div>
	</div>

