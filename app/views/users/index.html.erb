 <div class="container m-5">
 <div class=" table-responsive bg-white rounded border border-success p-2">
   <table class="table table-striped" >
		<tr>
			<th >First Name</th>
			<th >Last Name</th>
			<th >Email</th>
			<th>Action</th>

		</tr>

		<%@users.each do |user|%>
		<div>
			<tr>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.email %></td>
				<td>
					<%if current_user.admin?%>
					<%= link_to 'Show', user_path(user)%>
					<%else%>
					<%= link_to 'Show', user_path(user)%>
					<%= link_to 'Edit', edit_user_path(user),class:"btn btn-success" %>
					<%end%>	
					</td>
				</tr>
			</div>

			<% end %>
		</table>
	</div>
	<%= link_to 'Exit',destroy_user_session_path,method: :delete,class:"btn btn-success my-2" %>
	<div>
	</div>
	</div>




